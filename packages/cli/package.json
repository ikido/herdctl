{
  "name": "herdctl",
  "version": "1.0.0",
  "description": "Autonomous Agent Fleet Management for Claude Code",
  "license": "MIT",
  "type": "module",
  "bin": {
    "herdctl": "./bin/herdctl.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --exclude src/__tests__/smoke.test.ts",
    "test:smoke": "vitest run src/__tests__/smoke.test.ts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@herdctl/core": "workspace:*",
    "@herdctl/discord": "workspace:*",
    "@inquirer/prompts": "^8.2.0",
    "commander": "^12"
  },
  "devDependencies": {
    "typescript": "^5",
    "vitest": "^4.0.17"
  },
  "homepage": "https://herdctl.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/edspencer/herdctl"
  },
  "keywords": [
    "claude",
    "agent",
    "fleet",
    "orchestration",
    "cli",
    "anthropic"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
